			}
		}
		

		if( this.confirm("저장 하시겠습니까?") ){
			if( this.fileDs.rowcount > 0 ) {
				//alert("this.fileDs.rowcount==>" + this.fileDs.rowcount + "//" + this.ds_detail.getColumn(0, "DOC_REG_ID"));
				if( this.fn_dataCheck(this.fileDs) ) {
