this.Div_top_info_Button01_00_onclick = function(obj:nexacro.Button,e:nexacro.ClickEventInfo)
{
	if( this.parent.type == "U" ) {
	
		//에디터 내용을 가져오는 버튼 이벤트 호출
		this.fvDocWeb.getProperty("editorGetBtn").callMethod("click");
		//text 값 읽어오기.
