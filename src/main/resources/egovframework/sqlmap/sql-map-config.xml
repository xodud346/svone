<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<!-- 설정에서 각 매퍼에 설정된 캐시를 전역적으로 사용할지 말지에 대한 여부[기본값 true] -->
		<setting name="cacheEnabled" value="true" />
		<!-- myBatis Cache Scope : SESSION(기본값)/STATEMENT -->
		<setting name="localCacheScope" value="SESSION" />
		<!-- 한 개의 구문에서 여러 개의 ResultSet을 허용할지 여부[기본값 true] -->
		<setting name="multipleResultSetsEnabled" value="true" />
		<!-- 컬러명 대신 컬럼 라벨을 사용[기본값 true] -->
		<setting name="useColumnLabel" value="true" />
		<!-- 생성키에 대한 JDBC 지원 허용여부[기본값 false] -->
		<setting name="useGeneratedKeys" value="false" />
		<!-- 디폴트 Executor 설정 : SIMPLE는 특별히 동작하는것 없음 -->
		<setting name="defaultExecutorType" value="SIMPLE" />
		<!-- DB 응답 타임아웃 설정 -->
		<setting name="defaultStatementTimeout" value="600" />

		<!-- myBatis로 넘어오는 파라미터가 null인 경우, jdbcType을 setting -->
		<setting name="jdbcTypeForNull" value="NULL" />

		<!-- DB 컬럼을 Java의 Camel표기법으로 자동 매핑 설정 -->
		<setting name="mapUnderscoreToCamelCase" value="true" />
		<!-- 마이바티스가 칼럼을 필드/프로퍼티에 자동으로 매핑할지와 방법에 대해 명시 -->
		<setting name="autoMappingBehavior" value="PARTIAL" />

		<!-- 중첨구문내 RowBound 사용 허용 여부 -->
		<setting name="safeRowBoundsEnabled" value="false" />
		<!-- 중첩구문내 ResultHandler사용을 허용 허용한다면 false로 설정 -->
		<setting name="safeResultHandlerEnabled" value="false" />

		<!-- 지연로딩을 사용할지에 대한 여부 -->
		<setting name="lazyLoadingEnabled" value="true" />
		<!-- 지연로딩을 야기하는 객체의 메소드를 명시 -->
		<setting name="lazyLoadTriggerMethods" value="" />
		<!-- 활성화되면 모든 메서드 호출은 객체의 모든 lazy properties 을 로드한다. -->
		<setting name="aggressiveLazyLoading" value="false" />
		<!-- 조회된 필드가 null 일경우 map에 담을지 여부 -->
		<setting name="callSettersOnNulls" value="true"/>
	</settings>

	<typeAliases>
		<typeAlias  alias="sspMap" type="com.ssp.core.util.SspMap"/>
		<package name="com.ssp.core.common.model"/>
	</typeAliases>
	
	<plugins>
		<plugin interceptor="com.ssp.bo.co.interceptor.SQLInterceptor"></plugin>
	</plugins>	
</configuration>