<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssp.bo.co.oprtrUnit">

	<!--
	******************************************************************************
	* SELECT : 대상 멀티 조회
	* 작성자 : lee
	* 작성 일자 : 2022-05-24
	******************************************************************************
	-->
	<select id="selectOprtrUnitList" resultType="HashMap" parameterType="HashMap">
		SELECT CO_CD AS CO_CD
			 , BZPLC_ID	AS BZPLC_ID
			 , OPR_UNIT_ID AS OPR_UNIT_ID
			 , OPR_UNIT_NM AS OPR_UNIT_NM
		  FROM SSP_APP.TB_CC_OPR_UNIT_BASIS
		 WHERE CO_CD = #{coCd}
		   AND OPR_UNIT_ID IN
		 <foreach collection="oprtrUnitList" item="item" index="index" open="(" separator="," close=")">
			 #{item}
		 </foreach>

	</select>
</mapper>