<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<bean name="propertiesService" class="com.ssp.core.common.property.impl.SspPropertyServiceImpl" destroy-method="destroy">

		<property name="extFileName">
			<set>
				<map>
					<entry key="encoding" value="UTF-8"/>
					<entry key="filename" value="classpath*:/egovframework/properties/common-*.properties"/>
				</map>
				<map>
					<entry key="encoding" value="UTF-8"/>
					<entry key="filename" value="classpath:/egovframework/properties/${build:local_}resource.properties"/>
				</map>
				<map>
					<entry key="encoding" value="UTF-8"/>
					<entry key="filename" value="classpath:/egovframework/properties/${build:local_}wsdl.properties"/>
				</map>
			</set>
		</property>
		<property name="properties">
			<map>
				<!-- <entry key="pageUnit" value="10"/>
				<entry key="pageSize" value="10"/> -->
			</map>
		</property>
	</bean>

</beans>
